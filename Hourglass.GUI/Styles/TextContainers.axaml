<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vc="using:Hourglass.GUI.ValueConverters">
	<Design.PreviewWith>
		<StackPanel Width="100" Height="100">
			<TextBlock Classes="FieldDescriptor" Width="50" Height="50" Text="test" />
		</StackPanel>
	</Design.PreviewWith>
	<Style Selector="TextBlock">
		<Style Selector="^.DynamictextHeight">
			<Setter Property="FontSize" Value="{ Binding $self.Bounds, Converter={x:Static vc:TextSizeConverters.TextSizeFromWidthAndHeightConverter}}" />
			<Setter Property="Padding" Value="0,0,0,0"/>
			<Setter Property="MinHeight" Value="0"/>
		</Style>
	</Style>
	<Style Selector="TextBox">
		<Style Selector="^.DynamictextHeight">
			<Setter Property="FontSize" Value="{ Binding $self.Bounds, Converter={x:Static vc:TextSizeConverters.TextSizeFromWidthAndHeightConverter}}" />
			<Setter Property="Padding" Value="0,0,0,0"/>
			<Setter Property="MinHeight" Value="0"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
	</Style>
</Styles>