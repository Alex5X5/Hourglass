<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Components.GraphPanels"
			 xmlns:cls="using:Hourglass.GUI.Views.Components.GraphPanels"
			 xmlns:cpvm="using:Hourglass.GUI.ViewModels.Components"
			 xmlns:cp="using:Hourglass.GUI.Views.Components"
			 xmlns:vc="using:Hourglass.GUI.ValueConverters"
			 x:Class="Hourglass.GUI.Views.Components.GraphPanels.GraphPanelViewBase"
			 x:DataType="vm:GraphPanelViewModelBase"
			 Tapped="OnClickBase"
			 DoubleTapped="OnDoubleClickBase"
			 PointerMoved="OnMouseMovedBase"
			 PointerPressed="OnMousePressedBase"
			 PointerReleased="OnMouseReleasedBase"
			 Loaded="OnLoaded"
			 x:CompileBindings="True">
	<!--
	<UserControl.Styles>
		<Style Selector="Panel">
			<Setter Property="Background" Value="Red"/>
			<Style.Animations>
				<Animation Duration="0:0:3"> 
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="0.0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1.0"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</UserControl.Styles>
		</Grid.ColumnDefinitions>
	-->
	<Panel>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="4*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="4*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{ Binding PaddingYWeight }" />
				<ColumnDefinition Width="{ Binding GraphAreaYWeight }" />
				<ColumnDefinition Width="{ Binding PaddingYWeight }" />
			</Grid.ColumnDefinitions>
			<!--
			<ItemsControl Grid.Row ="0"
						  Grid.Column="1"
						  Grid.RowSpan="3"
						  ItemsSource="{ Binding CurrentTasks }">
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="cpvm:TaskGraphViewModel">
						<cp:TaskGraph DataContext="{ Binding }"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			-->
			<ItemsControl Grid.Row ="0"
						  Grid.Column="1"
						  Grid.RowSpan="3"
						  ItemsSource="{ Binding CurrentTasks }">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<Canvas Background="green" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="cpvm:TaskGraphViewModel">
						<Panel Canvas.Top="500"
							   Canvas.Left="300">
							<cp:TaskGraph DataContext="{ Binding }">
								<Panel.Width>
									<MultiBinding Converter="{ x:Static vc:GridToPositionConverters.WidthConverter }">
										<Binding Path="$parent[cls:GraphPanelViewBase].Bounds" />
										<Binding Path="$self.DataContext" />
										<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									</MultiBinding>
								</Panel.Width>
								<Panel.Height>
									<MultiBinding Converter="{ x:Static vc:GridToPositionConverters.HeightConverter }">
										<Binding Path="$parent[cls:GraphPanelViewBase].Bounds" />
										<Binding Path="$self.DataContext" />
										<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									</MultiBinding>
								</Panel.Height>
								<!--
								<Canvas.Top>
									<MultiBinding Converter="{ x:Static vc:GridToPositionConverters.RowConverter }">
										<Binding Path="$parent[cls:GraphPanelViewBase].Bounds" />
										<Binding Path="Row" />
									</MultiBinding>
								</Canvas.Top>
								<Canvas.Left>
									<MultiBinding Converter="{ x:Static vc:GridToPositionConverters.ColumnConverter }">
										<Binding Path="$parent[cls:GraphPanelViewBase].DataContext.TASK_GRAPH_COLUMN_COUNT" />
										<Binding Path="$parent[cls:GraphPanelViewBase].Bounds" />
									</MultiBinding>
								</Canvas.Left>
								-->
							</cp:TaskGraph>
						</Panel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Grid Grid.Row ="1"
				  Grid.Column="0"
				  RowDefinitions="*, 5*, *"
				  ColumnDefinitions="*, 7*, *" >
				<Button Grid.Row ="1"
						Grid.Column="1"
						Classes="Default"
						Click="PreviusIntervallClick" >
				</Button>
			</Grid>
			<Grid Grid.Row ="1"
					Grid.Column="2"
					RowDefinitions="*, 5*, *"
					ColumnDefinitions="*, 7*, *" >
				<Button Grid.Row ="1"
						Grid.Column="1"
						Classes="Default"
						Click="FollowingIntervallClick" >
				</Button>
			</Grid>
		</Grid>
	</Panel>
</UserControl>