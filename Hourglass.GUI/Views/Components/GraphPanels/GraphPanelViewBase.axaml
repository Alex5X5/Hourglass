<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Components.GraphPanels"
			 x:Class="Hourglass.GUI.Views.Components.GraphPanels.GraphPanelViewBase"
			 x:DataType="vm:GraphPanelViewModelBase"
			 Tapped="OnClickBase"
			 DoubleTapped="OnDoubleClickBase"
			 PointerMoved="OnMouseMovedBase"
			 PointerPressed="OnMousePressedBase"
			 PointerReleased="OnMouseReleasedBase"
			 x:CompileBindings="True">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{ Binding PaddingYWeight }" />
			<ColumnDefinition Width="{ Binding GraphAreaYWeight }" />
			<ColumnDefinition Width="{ Binding PaddingYWeight }" />
		</Grid.ColumnDefinitions>
		<Button Grid.Row="1"
				Grid.Column="0"
				Classes="Default"
				Command="{ Binding PreviusIntervallClickCommand }" >
		</Button>
		<Button Grid.Row="1"
				Grid.Column="2"
				Classes="Default"
				Command="{ Binding FollowingIntervallClickCommand }" >
		</Button>
	</Grid>
</UserControl>
