<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Components.GraphPanels"
			 xmlns:cls="using:Hourglass.GUI.Views.Components.GraphPanels"
			 xmlns:cpvm="using:Hourglass.GUI.ViewModels.Components"
			 xmlns:cp="using:Hourglass.GUI.Views.Components"
			 xmlns:vc="using:Hourglass.GUI.ValueConverters"
			 xmlns:vvc="using:Hourglass.GUI.ValueConverters"
			 x:Class="Hourglass.GUI.Views.Components.GraphPanels.GraphPanelViewBase"
			 x:DataType="vm:GraphPanelViewModelBase"
			 Tapped="OnClickBase"
			 DoubleTapped="OnDoubleClickBase"
			 PointerMoved="OnMouseMovedBase"
			 PointerPressed="OnMousePressedBase"
			 PointerReleased="OnMouseReleasedBase"
			 Loaded="OnLoaded"
			 x:CompileBindings="True">
	<!--
	<UserControl.Styles>
		<Style Selector="Panel">
			<Setter Property="Background" Value="Red"/>
			<Style.Animations>
				<Animation Duration="0:0:3"> 
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="0.0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1.0"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</UserControl.Styles>
		</Grid.ColumnDefinitions>
	-->
	<Panel>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="4*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="4*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{ Binding PaddingYWeight }" />
				<ColumnDefinition Width="{ Binding GraphAreaYWeight }" />
				<ColumnDefinition Width="{ Binding PaddingYWeight }" />
			</Grid.ColumnDefinitions>
			<ItemsControl Grid.Row ="0"
						  Grid.Column="0"
						  Grid.RowSpan="3"
						  Grid.ColumnSpan="3"
						  ItemsSource="{ Binding CurrentTasks }">
				<ItemsControl.Resources>
					<vc:TaskWidthConverter x:Key="WidthConverter"/>
					<vc:TaskHeightConverter x:Key="HeightConverter"/>
					<vc:TaskLeftConverter x:Key="LeftConverter"/>
					<vc:TaskTopConverter x:Key="TopConverter"/>
					<vc:CanvasTopConverter x:Key="CanvasTopConverter"/>
					<vc:CanvasHeightConverter x:Key="CanvasHeightConverter"/>
					<vc:RectangleRoundConverter x:Key="RoundConverter"/>
				</ItemsControl.Resources>
				
				<ItemsControl.Styles>
					<Style Selector="Canvas.Container">
						<Setter Property="Canvas.Width">
							<Setter.Value>
								<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds.Width" />
							</Setter.Value>
						</Setter>
						<Setter Property="Canvas.Height">
							<Setter.Value>
								<MultiBinding Converter="{ StaticResource CanvasHeightConverter }">
									<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds" />
									<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
								</MultiBinding>
							</Setter.Value>
						</Setter>
						<Setter Property="Opacity" Value="1" />
						<Setter Property="Transitions">
							<Setter.Value>
								<Transitions> 
									<TransformOperationsTransition Property="RenderTransform"/>
								</Transitions>
							</Setter.Value>
						</Setter>
						<Style Selector="^.removing">
							<Style.Animations>
								<Animation Duration="0:0:1.5" FillMode="Forward">
									<Animation.Easing>
										<LinearEasing />
									</Animation.Easing>
									<KeyFrame Cue="0%">
										<Setter Property="Opacity" Value="1"/>
									</KeyFrame>
									<KeyFrame Cue="50%">
										<Setter Property="Opacity" Value="0.25"/>
									</KeyFrame>
									<KeyFrame Cue="100%">
										<Setter Property="Opacity" Value="0"/>
									</KeyFrame>
								</Animation>
							</Style.Animations>
							<Style Selector="^.left">
								<Style.Animations>
									<Animation Duration="0:0:1.2" FillMode="Forward">
										<Animation.Easing>
											<CubicEaseOut />
										</Animation.Easing>
										<KeyFrame Cue="0%">
											<Setter Property="TranslateTransform.X" Value="0"/>
										</KeyFrame>
										<KeyFrame Cue="100%">
											<Setter Property="TranslateTransform.X" Value="100"/>
										</KeyFrame>
									</Animation>
								</Style.Animations>
							</Style>
							<Style Selector="^.right">
								<Style.Animations>
									<Animation Duration="0:0:1.2" FillMode="Forward">
										<Animation.Easing>
											<CubicEaseOut />
										</Animation.Easing>
										<KeyFrame Cue="0%">
											<Setter Property="TranslateTransform.X" Value="0"/>
										</KeyFrame>
										<KeyFrame Cue="100%">
											<Setter Property="TranslateTransform.X" Value="-100"/>
										</KeyFrame>
									</Animation>
								</Style.Animations>
							</Style>
						</Style>
						<Style Selector="^.adding">
							<Style.Animations>
								<Animation Duration="0:0:1.5" FillMode="Forward">
									<Animation.Easing>
										<LinearEasing />
									</Animation.Easing>
									<KeyFrame Cue="0%">
										<Setter Property="Opacity" Value="0"/>
									</KeyFrame>
									<KeyFrame Cue="50%">
										<Setter Property="Opacity" Value="0.75"/>
									</KeyFrame>
									<KeyFrame Cue="100%">
										<Setter Property="Opacity" Value="1"/>
									</KeyFrame>
								</Animation>
							</Style.Animations>
							<Style Selector="^.left">
								<Style.Animations>
									<Animation Duration="0:0:1.2" FillMode="Forward">
										<Animation.Easing>
											<CubicEaseOut />
										</Animation.Easing>
										<KeyFrame Cue="0%">
											<Setter Property="TranslateTransform.X" Value="100"/>
										</KeyFrame>
										<KeyFrame Cue="100%">
											<Setter Property="TranslateTransform.X" Value="0"/>
										</KeyFrame>
									</Animation>
								</Style.Animations>
							</Style>
							<Style Selector="^.right">
								<Style.Animations>
									<Animation Duration="0:0:1.2" FillMode="Forward">
										<Animation.Easing>
											<CubicEaseOut />
										</Animation.Easing>
										<KeyFrame Cue="0%">
											<Setter Property="TranslateTransform.X" Value="-100"/>
										</KeyFrame>
										<KeyFrame Cue="100%">
											<Setter Property="TranslateTransform.X" Value="0"/>
										</KeyFrame>
									</Animation>
								</Style.Animations>
							</Style>
						</Style>
					</Style>
					<Style Selector="ItemsControl > ContentPresenter">
						<Setter Property="Canvas.Left" Value="0" />
						<Setter Property="Canvas.Top">
							<Setter.Value>
								<MultiBinding Converter="{ StaticResource CanvasTopConverter }">
									<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds" />
									<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									<Binding />
								</MultiBinding>
							</Setter.Value>
						</Setter>
					</Style>
					<Style Selector="Rectangle">
						<Setter Property="Width">
							<Setter.Value>
								<MultiBinding Converter="{ StaticResource WidthConverter }">
									<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds" />
									<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									<Binding />
								</MultiBinding>
							</Setter.Value>
						</Setter>
						<Setter Property="Height">
							<Setter.Value>
								<MultiBinding Converter="{ StaticResource HeightConverter }">
									<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds" />
									<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									<Binding />
								</MultiBinding>
							</Setter.Value>
						</Setter>
						<Setter Property="RadiusX">
							<Setter.Value>
								<Binding Converter="{ StaticResource RoundConverter }" Path="$self.Bounds" />	
							</Setter.Value>
						</Setter>
						<Setter Property="RadiusY">
							<Setter.Value>
								<Binding Converter="{ StaticResource RoundConverter }" Path="$self.Bounds" />	
							</Setter.Value>
						</Setter>
						<Setter Property="Canvas.Top" Value="0" />
						<Setter Property="Canvas.Left">
							<Setter.Value>
								<MultiBinding Converter="{ StaticResource LeftConverter }">
									<Binding Path="$parent[ItemsControl].ItemsPanelRoot.Bounds" />
									<Binding Path="$parent[cls:GraphPanelViewBase].DataContext" />
									<Binding />
								</MultiBinding>
							</Setter.Value>
						</Setter>
					</Style>
				</ItemsControl.Styles>

				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<Canvas Classes="ItemsPanel" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="cpvm:TaskGraphViewModel">
						<Canvas Classes="Container"
								Classes.adding="{ Binding IsAdding }"
								Classes.removing="{ Binding IsRemoving }"
								Classes.left="{ Binding Left }"
								Classes.right="{ Binding Right }">
							<Rectangle Fill="Orange" />
							<!--
							<TextBlock Text="Dienstag"
										RenderTransformOrigin="50,50"
										Classes="Default" >
								<TextBlock.RenderTransform>
									<RotateTransform Angle="-90" />
								</TextBlock.RenderTransform>
							</TextBlock>
							-->
						</Canvas>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			
			</ItemsControl>
			<Grid Grid.Row ="1"
				  Grid.Column="0"
				  RowDefinitions="*, 5*, *"
				  ColumnDefinitions="*, 7*, *" >
				<Button Grid.Row ="1"
						Grid.Column="1"
						Classes="Default"
						Click="PreviusIntervallClick" >
				</Button>
			</Grid>
			<Grid Grid.Row ="1"
					Grid.Column="2"
					RowDefinitions="*, 5*, *"
					ColumnDefinitions="*, 7*, *" >
				<Button Grid.Row ="1"
						Grid.Column="1"
						Classes="Default"
						Click="FollowingIntervallClick" >
				</Button>
			</Grid>
		</Grid>
	</Panel>
</UserControl>