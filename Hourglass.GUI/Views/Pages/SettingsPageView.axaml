<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Hourglass.GUI.ViewModels"
			 xmlns:pages="using:Hourglass.GUI.Views.Pages"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Hourglass.GUI.Views.SettingsPageView"
			 x:DataType="vm:SettingsPageViewModel">
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>
	<Grid Background="White" >
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="8*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="23*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0"
			  Grid.Column="0"
			  Grid.RowSpan="3"
			  Background="{ StaticResource SrhGray }">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="7*" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="5*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="4*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="22*" />
			</Grid.RowDefinitions>
			<Button Grid.Row="1"
					Grid.Column="1"
					Classes="Default"
					Command="{ Binding CancelCommand }">
				<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
					<Viewbox Grid.Row="1"
							 Grid.Column="1"
							 Stretch="Uniform"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center">
						<TextBlock Classes="ButtonContent" Text="Back" FontSize="13"/>
					</Viewbox>
				</Grid>
			</Button>
			<Button Grid.Row="3"
					Grid.Column="1"
					Classes="Default"
					Command="{ Binding GoToAboutCommand }">
				<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
					<Viewbox Grid.Row="1"
								Grid.Column="1"
								Stretch="Uniform"
								VerticalAlignment="Center"
								HorizontalAlignment="Center">
						<TextBlock Classes="ButtonContent" Text="About" FontSize="13"/>
					</Viewbox>
				</Grid>
			</Button>
			<Button Grid.Row="5"
					Grid.Column="1"
					Classes="Default"
					Command="{ Binding GoToVisualsCommand }">
				<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
					<Viewbox Grid.Row="1"
							 Grid.Column="1"
							 Stretch="Uniform"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center">
						<TextBlock Classes="ButtonContent" Text="Visuals" FontSize="13"/>
					</Viewbox>
				</Grid>
			</Button>
			<Button Grid.Row="7"
					Grid.Column="1"
					Classes="Default"
					Command="{ Binding GoToUserDataCommand }">
				<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
					<Viewbox Grid.Row="1"
							 Grid.Column="1"
							 Stretch="Uniform"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center">
						<TextBlock Classes="ButtonContent" Text="User Data" FontSize="13"/>
					</Viewbox>
				</Grid>
			</Button>
		</Grid>
		<ContentControl Grid.Row="1"
						Grid.Column="2"
						Content="{ Binding CurrentPage }" />
	</Grid>
</UserControl>
