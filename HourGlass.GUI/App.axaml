<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Hourglass.GUI.App"
			 xmlns:locator="using:Hourglass.GUI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.DataTemplates>
		<locator:ViewLocator/>
	</Application.DataTemplates>
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Styles/GlobalColors.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
		<FontFamily x:Key="SrhText">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_Rg.ttf#Srh</FontFamily>
		<FontFamily x:Key="SrhTextItalic">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_It.ttf#Srh</FontFamily>
		<FontFamily x:Key="SrhTextBold">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_Bd.ttf#Srh</FontFamily>
		<FontFamily x:Key="SrhTextBoldItalic">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_BdIt.ttf#Srh</FontFamily>
		<FontFamily x:Key="SrhTextLite">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_Lt.ttf#Srh</FontFamily>
		<FontFamily x:Key="SrhTextLiteItalic">avares://Hourglass.GUI/Assets/Fonts/srh/SRHText_LtIt.ttf#Srh</FontFamily>
	</Application.Resources>

	<Application.Styles>
		<StyleInclude Source="/Styles/Buttons.axaml" />
		<StyleInclude Source="/Styles/TextBlocks.axaml" />
		<StyleInclude Source="/Styles/TextBoxes.axaml" />
		<StyleInclude Source="/Styles/ComboBoxes.axaml" />
		<StyleInclude Source="/Styles/Boxes.axaml" />
		<FluentTheme />
	</Application.Styles>
</Application>
