<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Hourglass.GUI.App"
			 xmlns:locator="using:Hourglass.GUI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.DataTemplates>
		<locator:ViewLocator/>
	</Application.DataTemplates>
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Styles/GlobalColors.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.Styles>
		<StyleInclude Source="/Styles/Buttons.axaml" />
		<StyleInclude Source="/Styles/TextBlocks.axaml" />
		<StyleInclude Source="/Styles/Comboboxes.axaml" />
		<FluentTheme />
	</Application.Styles>
</Application>
