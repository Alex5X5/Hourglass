<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<StackPanel Width="500" Height="100">
			<TextBox Text="test" />
		</StackPanel>
	</Design.PreviewWith>
	<Style Selector="TextBox, ComboBox">
		<Setter Property="Background" Value="{ StaticResource SrhGray }" />
		<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark1 }" />
		<Setter Property="BorderThickness" Value="3" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Foreground" Value="Black" />
		<Setter Property="CornerRadius" Value="0" />
		<Style Selector="^:pointerover /template/ Border">
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight1 }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGray }" />
			<Setter Property="RenderTransform" Value="None"/>
		</Style>
		<Style Selector="^:pressed /template/ Border">
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight1 }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGray }" />
		</Style>
		<Style Selector="^:focus /template/ Border">
			<Setter Property="BorderBrush" Value="{ StaticResource Focus1 }" />
			<Setter Property="Background" Value="{ StaticResource Focus2 }" />
		</Style>
		<Style Selector="^:focus">
			<Setter Property="Foreground" Value="Black" />
		</Style>
	</Style>
</Styles>
