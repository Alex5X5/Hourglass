<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:bc="using:Hourglass.GUI.ValueConverters">
	<Design.PreviewWith>
		<StackPanel Width="100" Height="100">
			<Button Classes="SrhDefault" Width="50" Height="50" />
		</StackPanel>
	</Design.PreviewWith>
	<Style Selector="Button.Default">
		<Style.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceInclude Source="/Styles/ButtonConstants.axaml"/>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Style.Resources>
		<Setter Property="Background" Value="{ StaticResource SrhGray }" />
		<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark1 }" />
		<Setter Property="BorderThickness" Value="{ StaticResource DefaultBorderThickness }" />
		<Setter Property="Foreground" Value="{ StaticResource DefaultForeground }" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Padding" Value="0,0,0,0"/>
		<Setter Property="RenderTransformOrigin" Value="50%, 50%"/>
		<Setter Property="Transitions">
			<Transitions>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:.015" />
			</Transitions>
		</Setter>
		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="BorderThickness" Value="{ StaticResource HoverBorderThickness }" />
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight1 }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark1 }" />
			<Setter Property="Foreground" Value="{ StaticResource DefaultForeground }" />
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="RenderTransform" Value="None"/>
		</Style>
		<Style Selector="^:pressed /template/ ContentPresenter">
			<Setter Property="BorderThickness" Value="{ StaticResource ClickBorderThickness }" />
			<Setter Property="Background" Value="{ StaticResource SrhGrayDark1 }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark2 }" />
			<Setter Property="Foreground" Value="{ StaticResource DefaultForeground }" />
			<Setter Property="RenderTransform" Value="matrix(0.95,0.0,0.0,0.95,0,0) "/>
		</Style>
		<Style Selector="^:disabled /template/ ContentPresenter">
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight2 }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGray }" />
			<Setter Property="Foreground" Value="{ StaticResource SrhGrayDark2 }" />
		</Style>
	</Style>
	<Style Selector="Button.DefaultBorder">
		<Style.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceInclude Source="/Styles/ButtonConstants.axaml"/>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Style.Resources>
		<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark1 }" />
		<Setter Property="BorderThickness" Value="{ StaticResource DefaultBorderThickness }" />
		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="BorderThickness" Value="{ StaticResource HoverBorderThickness }" />
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight1 }" />
			<Setter Property="BorderBrush" Value="#C5C5C5" />
			<Setter Property="RenderTransform" Value="None"/>
		</Style>
		<Style Selector="^:pressed /template/ ContentPresenter">
			<Setter Property="BorderThickness" Value="{ StaticResource ClickBorderThickness }" />
			<Setter Property="BorderBrush" Value="{ StaticResource SrhGrayDark2 }" />
		</Style>
	</Style>
	<Style Selector="Button.DefaultBackground">
		<Style.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceInclude Source="/Styles/ButtonConstants.axaml"/>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Style.Resources>
		<Setter Property="Background" Value="{ StaticResource SrhGray }" />
		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="{ StaticResource SrhGrayLight1 }" />
		</Style>
		<Style Selector="^:pressed /template/ ContentPresenter">
			<Setter Property="Background" Value="{ StaticResource SrhGrayDark1 }" />
		</Style>
	</Style>
	<Style Selector="Button.DynamicBackground">
		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="{ Binding $parent[Button].Background, Converter={x:Static bc:ColorConverters.ColorConverterBrighten} }" />
		</Style>
		<Style Selector="^:pressed /template/ ContentPresenter">
			<Setter Property="Background" Value="{ Binding $parent[Button].Background, Converter={x:Static bc:ColorConverters.ColorConverterDarken} }" />
		</Style>
	</Style>
</Styles>