<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:page-models="using:Hourglass.GUI.ViewModels.Pages"
			 xmlns:panels="using:Hourglass.GUI.Views.Components.GraphPanels"
			 xmlns:mode-buttons="using:Hourglass.GUI.Views.Components.GraphModeButtons"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Pages"
			 x:Class="Hourglass.GUI.Views.Pages.GraphPageView"
			 x:DataType="vm:GraphPageViewModel"
			 x:CompileBindings="True">
	<Design.DataContext>
		<page-models:GraphPageViewModel />
	</Design.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="15*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="25*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<!-- 
		<Panel Background="#BABABA" Grid.Column="3" Grid.Row="1">
		-->
		<Panel Background="#D9D9D9" Grid.Column="3" Grid.Row="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="9*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="9*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="5*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.Styles>
					<Style Selector="Button:pointerover /template/ ContentPresenter">
						<Setter Property="BorderThickness" Value="2" />
						<Setter Property="Background" Value="#E9E9E9" />
						<Setter Property="BorderBrush" Value="#C5C5C5" />
					</Style>
					<Style Selector="Button:pressed /template/ ContentPresenter">
						<Setter Property="BorderThickness" Value="2" />
						<Setter Property="Background" Value="#C0C0C0" />
						<Setter Property="BorderBrush" Value="#A1A1A1" />
					</Style>
				</Grid.Styles>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						HorizontalAlignment="Stretch"
						Grid.Row="1"
						Grid.Column="1"
						Click="DayModeButton_Click"
						VerticalAlignment="Stretch" />
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						HorizontalAlignment="Stretch"
						Grid.Row="3"
						Grid.Column="1"
						Click="WeekModeButton_Click"
						VerticalAlignment="Stretch" />
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						HorizontalAlignment="Stretch"
						Grid.Row="5"
						Grid.Column="1"
						Click="MonthModeButton_Click"
						VerticalAlignment="Stretch" />
			</Grid>
		</Panel>
		<Border Grid.Row="1"
				Grid.Column="1"
				BorderBrush="Black"
				BorderThickness="2">
			<ContentControl Content="{Binding CurrentGraphPanel}" />
		</Border>
	</Grid>
</UserControl>
