<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:page-models="using:Hourglass.GUI.ViewModels.Pages"
			 xmlns:panels="using:Hourglass.GUI.Views.Components.GraphPanels"
			 xmlns:mode-button-icons="using:Hourglass.GUI.Views.Components.GraphModeButtons"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Pages"
			 x:Class="Hourglass.GUI.Views.Pages.GraphPageView"
			 x:DataType="vm:GraphPageViewModel"
			 x:CompileBindings="True">
	<Design.DataContext>
		<page-models:GraphPageViewModel />
	</Design.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="15*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="25*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<!-- 
		<Panel Background="#BABABA" Grid.Column="3" Grid.Row="1">
		-->
		<Panel Background="#D9D9D9" Grid.Column="3" Grid.Row="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="9*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="5*" />
					<RowDefinition Height="2*" />
					<RowDefinition Height="9*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="5*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						Grid.Row="1"
						Grid.Column="1"
						Click="DayModeButton_Click"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Padding="0,0,0,0">
					<mode-button-icons:DayGraphModeButtonIcon HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
				</Button>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						Grid.Row="3"
						Grid.Column="1"
						Click="WeekModeButton_Click"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Padding="0,0,0,0">
					<mode-button-icons:WeekGraphModeButtonIcon HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
				</Button>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						Grid.Row="5"
						Grid.Column="1"
						Click="MonthModeButton_Click"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Padding="0,0,0,0">
					<mode-button-icons:MonthGraphModeButtonIcon HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
				</Button>
			</Grid>
		</Panel>
		<Border Grid.Row="1"
				Grid.Column="1"
				BorderBrush="Black"
				BorderThickness="2">
			<ContentControl Content="{Binding CurrentGraphPanel}" />
		</Border>
	</Grid>
</UserControl>
