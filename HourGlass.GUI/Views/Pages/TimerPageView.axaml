<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:Hourglass.GUI.ViewModels.Pages"
			 xmlns:vc="using:Hourglass.GUI.ValueConverters"
			 xmlns:reactive="using:System.Reactive;assembly=System.Reactive"
			 x:Class="Hourglass.GUI.Views.Pages.TimerPageView"
			 x:DataType="vm:TimerPageViewModel"
			 x:CompileBindings="True"
			 Loaded="UserControl_Loaded"
			 Unloaded="UserControl_Unloaded">
	<Design.DataContext>
		<vm:TimerPageViewModel />
	</Design.DataContext>
	<Grid Background="White" >
		<Grid.RowDefinitions>
			<RowDefinition Height="2*" />
			<RowDefinition Height="15*" />
			<RowDefinition Height="2*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="6*" />
			<ColumnDefinition Width="3*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="1" Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="4*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="6*" />
				<RowDefinition Height="4*" />
				<RowDefinition Height="4*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="24*" />
				<RowDefinition Height="6*" />
				<RowDefinition Height="7*" />
				<RowDefinition Height="7*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<TextBlock Text="Anfang"
					   Grid.Row="0"
					   Grid.Column="0"
					   Classes="Default DynamicTextHeight" />
			<TextBlock Text="Ende"
					   Grid.Row="0"
					   Grid.Column="2"
					   Classes="Default DynamicTextHeight" />
			<TextBox Text="{ Binding StartTextboxText }"
					 Grid.Row="2"
					 Grid.Column="0"
					 VerticalContentAlignment="Center"
					 Classes="Default DynamicTextHeight" />
			<TextBox Text="{ Binding FinishTextboxText }"
					 Grid.Row="2"
					 Grid.Column="2"
					 VerticalContentAlignment="Center"
					 Classes="Default DynamicTextHeight" />
			<TextBlock Text="Beschreibung"
					   Grid.Row="4"
					   Grid.Column="0"
					   Classes="Default DynamicTextHeight" />
			<TextBox Text="{ Binding DescriptionTextboxText }"
					 Grid.Row="6"
					 Grid.Column="0"
					 Grid.ColumnSpan="3"
					 Name="DescriptionTextbox"
					 Classes="Default"
					 FontSize="{ Binding $self.Bounds, Converter={x:Static vc:TextSizeConverters.TextSizeFromWidthAndHeightAndParameterConverter}, ConverterParameter=0.26 }"
					 VerticalContentAlignment="Top"
					 GotFocus="TextBox_GotFocus"
					 KeyDown="TextBox_KeyDown"
					 TextWrapping="Wrap"/>
			<!--
			<TextBlock Text="Ticket"
					   Classes="DynamictextHeight"
					   Grid.Row="6"
					   Grid.Column="0" />
			<TextBox Grid.Row="7"
					 Grid.Column="0"
					 Text="{ Binding TicketTextboxText }" />
			<TextBlock Text="Project"
					   Classes="DynamictextHeight"
					   Grid.Row="6"
					   Grid.Column="2" />
			<ComboBox SelectedIndex="0"
					  Grid.Row="7"
					  Grid.Column="2"
					  MaxDropDownHeight="300"
					  ItemsSource="{Binding AvailableProjects}"
					  SelectedValue="{Binding SelectedProject}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			-->
			<Grid Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="2*, 3*, 3*, 3*, 2*" >
				<Button Name="startButton"
						Grid.Column="1"
						Classes="Default"
						IsEnabled="{ Binding IsStartButtonEnabled }"
						Command="{ Binding StartTaskCommand }" >
					<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
						<Viewbox Grid.Row="1"
								 Grid.Column="1"
								 Stretch="Uniform"
								 VerticalAlignment="Center"
								 HorizontalAlignment="Center">
							<TextBlock Classes="ButtonContent" Text="Start" />
						</Viewbox>
					</Grid>
				</Button>
				<Button Name="stopButton"
						Grid.Column="3"
						Classes="Default"
						IsEnabled="{ Binding IsStopButtonEnabled }"
						Command="{ Binding StopTaskCommand }" >
					<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
						<Viewbox Grid.Row="1"
								 Grid.Column="1"
								 Stretch="Uniform"
								 VerticalAlignment="Center"
								 HorizontalAlignment="Center">
							<TextBlock Classes="ButtonContent" Text="Stop" />
						</Viewbox>
					</Grid>
				</Button>
				<!--
				<Button Name="restartButton"
						Grid.Column="4"
						Classes="Default"
						IsEnabled="{ Binding IsRestartButtonEnabled }"
						Command="{ Binding RestartTaskCommand }" >
					<Grid RowDefinitions="*, 5*, *" ColumnDefinitions="*, 10*, *">
						<Viewbox Grid.Row="1"
								 Grid.Column="1"
								 Stretch="Uniform"
								 VerticalAlignment="Center"
								 HorizontalAlignment="Center">
							<TextBlock Classes="ButtonContent" Text="Restart" />
						</Viewbox>
					</Grid>
				</Button>
				-->
			</Grid>
		</Grid>
	</Grid>
</UserControl>
