<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:Hourglass.GUI.ViewModels.Pages"
			 x:Class="Hourglass.GUI.Views.Pages.TimerPageView"
			 x:DataType="vm:TimerPageViewModel"
			 x:CompileBindings="True"
			 Background="">
	<Design.DataContext>
		<vm:TimerPageViewModel />
	</Design.DataContext>
	<Grid Background="White" >
		<Grid.RowDefinitions>
			<RowDefinition Height="2*" />
			<RowDefinition Height="15*" />
			<RowDefinition Height="2*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="6*" />
			<ColumnDefinition Width="3*" />
		</Grid.ColumnDefinitions>
		<Grid.Styles>
			<!-- Add Styles Here -->
			<Style Selector="TextBox">
				<Setter Property="BorderBrush" Value="Gold" />
				<Setter Property="BorderThickness" Value="3" />
				<Setter Property="Background" Value="#D9D9D9" />
				<Setter Property="Foreground" Value="#050505" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />
				<Setter Property="CornerRadius" Value="0" />
				<Setter Property="VerticalAlignment" Value="Stretch" />
			</Style>

			<Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
				<Setter Property="BorderBrush" Value="Orange" />
				<Setter Property="BorderThickness" Value="3" />
				<Setter Property="Background" Value="#E9E9E9" />
			</Style>

			<Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
				<Setter Property="BorderBrush" Value="LightBlue" />
				<Setter Property="BorderThickness" Value="2" />
				<Setter Property="Background" Value="#C0C0C0" />
			</Style>

			<!--
			<Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
				<Setter Property="BorderBrush" Value="{DynamicResource HoverGradient}"></Setter>
				<Setter Property="BorderThickness" Value="{DynamicResource PrimaryBorderThickness}"></Setter>
				<Setter Property="Background" Value="{DynamicResource PrimaryHoverBackground}"></Setter>
			</Style>
			-->

		</Grid.Styles>
		<Grid Grid.Row="1" Grid.Column="1" >
			<Grid.RowDefinitions>
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="12*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<TextBlock Text="Start" Foreground="Black" Padding="10,0,0,0" Grid.Row="0" Grid.Column="0" />
			<TextBox Grid.Row="1"
					 Grid.Column="0" />
			<TextBlock Text="Finish" Foreground="Black" Padding="10,0,0,0" Grid.Row="0" Grid.Column="2" />
			<TextBox Grid.Row="1"
					 Grid.Column="2" />
			<TextBlock Text="Description" Foreground="Black" Padding="10,0,0,0" Grid.Row="3" Grid.Column="0" />
			<TextBox Name="DescriptionTextbox"
					 Grid.Row="4"
					 Grid.Column="0"
					 Grid.ColumnSpan="3"
					 Grid.RowSpan="1"
					 Text="{ Binding DescriptionString }" />
			<TextBlock Text="Ticket" Foreground="Black" Padding="10,0,0,0" Grid.Row="6" Grid.Column="0" />
			<TextBox Grid.Row="7"
					 Grid.Column="0"/>
			<TextBlock Text="Project" Foreground="Black" Padding="10,0,0,0" Grid.Row="6" Grid.Column="2" />
			<TextBox Grid.Row="7"
					 Grid.Column="2"/>
			<Grid Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Grid.Styles>
					<Style Selector="Button:pointerover /template/ ContentPresenter">
						<Setter Property="BorderThickness" Value="2" />
						<Setter Property="Background" Value="#E9E9E9" />
						<Setter Property="BorderBrush" Value="#C5C5C5" />
					</Style>
					<Style Selector="Button:pressed /template/ ContentPresenter">
						<Setter Property="BorderThickness" Value="2" />
						<Setter Property="Background" Value="#C0C0C0" />
						<Setter Property="BorderBrush" Value="#A1A1A1" />
					</Style>
					<Style Selector="TextBlock">
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="VerticalAlignment" Value="Center" />
						<Setter Property="Foreground" Value="Black" />
						<Setter Property="FontSize" Value="13" />
					</Style>
				</Grid.Styles>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Command="{ Binding StartTaskCommand }" >
						<TextBlock Text="Start" />
				</Button>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Grid.Column="2"
						Command="{ Binding StopTaskCommand }" >
					<TextBlock Text="Stop" />
				</Button>
				<Button Background="#D9D9D9"
						BorderBrush="#C5C5C5"
						BorderThickness="3"
						Grid.Column="4"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Command="{ Binding RestartTaskCommand }" >
					<TextBlock Text="Restart" />
				</Button>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
