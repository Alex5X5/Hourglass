<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Hourglass.GUI.ViewModels"
			 xmlns:pages="using:Hourglass.GUI.Views.Pages.SettingsPages"
			 xmlns:cls="using:Hourglass.GUI.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Hourglass.GUI.Views.MainView"
			 x:DataType="vm:MainViewModel"
			 x:CompileBindings="True"	>
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>
	<Grid ShowGridLines="true">
		<Grid.RowDefinitions>
			<RowDefinition Height="3.5*"/>
			<RowDefinition Height="1.5*"/>
			<RowDefinition Height="22*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="15*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Panel Grid.Row="0"
			   Grid.Column="0"
			   Grid.ColumnSpan="3"
			   Background="Orange">
		</Panel>
		<Panel Grid.Row="1"
					Grid.Column="0"
					Grid.ColumnSpan="3"
					Background="#1d1d1b">
		</Panel>
		<Grid Grid.Row="1"
			  Grid.Column="0"
			  RowDefinitions="*, 5*, *"
			  ColumnDefinitions="*, 5*, *">
			<Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
				<Button Width="100"
						Height="100">
					<Svg Path="avares://Hourglass.GUI/Assets/Images/pfeil-links.svg"/>
				</Button>
			</Viewbox>
		</Grid>
		<StackPanel Grid.Row="1"
					Grid.Column="1"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<Rectangle Fill="Red" Height="20" Width="50"/>
			<Rectangle Fill="Blue" Height="20" Width="50"/>
			<Rectangle Fill="Green" Height="20" Width="100"/>
			<Rectangle Fill="Orange" Height="20" Width="50"/>
		</StackPanel>
	</Grid>
</UserControl>
