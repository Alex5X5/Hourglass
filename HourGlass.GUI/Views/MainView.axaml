<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Hourglass.GUI.ViewModels"
			 xmlns:pages="using:Hourglass.GUI.Views.Pages"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Hourglass.GUI.Views.MainView"
			 x:DataType="vm:MainViewModel">
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*" />
			<RowDefinition Height="2*" />
			<RowDefinition Height="18*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Panel Background="{ StaticResource SrhOrange }" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="4*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="5*" />
					<ColumnDefinition Width="8*" />
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Row="1"
						   Grid.Column="1"
						   HorizontalAlignment="Stretch"
						   VerticalAlignment="Center"
						   Text="{Binding Title}"
						   FontSize="55" />
			</Grid>
		</Panel>
		<Panel Background="{ StaticResource SrhGray }" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" />
		<Panel Background="{ StaticResource SrhGray }" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="4*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="3*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Button Grid.Row="1"
						Grid.Column="1"
						Command="{Binding GoToTimerCommand}"
						Name="TimerModeButton">
						<TextBlock Classes="ButtonContent" Text="Timer" FontSize="15"/>
				</Button>
				<Button Grid.Row="1"
						Grid.Column="3"
						Command="{Binding GoToGraphsCommand}"
						Name="GraphModeButton">
						<TextBlock Classes="ButtonContent" Text="Graph" FontSize="15"/>
				</Button>
				<Button Grid.Row="1"
						Grid.Column="5"
						Command="{Binding GoToExportCommand}"
						Name="ExportModeButton">
						<TextBlock Classes="ButtonContent" Text="Export" FontSize="15"/>
				</Button>
				<Button Grid.Row="1"
						Grid.Column="7"
						Command="{Binding GoToProjectCommand}"
						Name="ProjectModeButton">
						<TextBlock Classes="ButtonContent" Text="Projects" FontSize="15"/>
				</Button>
			</Grid>
		</Panel>
		<ContentControl Background="White" Content="{Binding CurrentPage}" Grid.Row="2" Grid.Column="1" />
	</Grid>
</UserControl>
